<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.google.android.material.imageview.ShapeableImageView
        android:layout_width="52dp"
        android:layout_height="52dp"
        android:background="@drawable/back_count"
        android:src="@drawable/person_icon_white"
        android:scaleType="centerCrop"
        app:shapeAppearanceOverlay="@style/ImageCircularDesign"
        android:layout_centerInParent="true"
        android:id="@+id/profile_pic_image_view"
        />

    <ImageView
        android:id="@+id/status_dot"
        android:layout_width="12dp"
        android:layout_height="12dp"
        android:layout_alignEnd="@id/profile_pic_image_view"
        android:layout_alignBottom="@id/profile_pic_image_view"
        android:layout_marginEnd="2dp"
        android:layout_marginBottom="1dp"
        android:background="@drawable/status_dot_bg" />


</RelativeLayout>